{{#extend "base"}}
    {{#content "title"}}
        <title>{{username}}</title>
    {{/content}}

    {{#content "styles"}}
        {{#if commonData.isDev}}
            <link rel="stylesheet" href="/userPage.css">
        {{else}}
            <link rel="stylesheet" href="//dream-team-4.surge.sh/userPage.css">
        {{/if}}
    {{/content}}

    {{#content "main"}}
    <div class="container">
        <div class="row">
            <div class="box">
                <div class="main-content">
                    <div class="col-lg-12">
                        {{#if self}}
                            <p class="text-center">Моя страничка</p>
                        {{else}}
                            <p class="text-center">{{username}}</p>
                        {{/if}}
                    </div>
                    <div class="main panel-primary">

                        <div id="inProcess-title" class="col-lg-12">
                            <hr>
                            {{#if self}}
                                <h2 class="intro-text text-center">Мои квесты</h2>
                            {{else}}
                                <h2 class="intro-text text-center">Созданные</h2>
                            {{/if}}
                            <hr>
                        </div>
                        <div class="quest">
                            <div class="row">
                                {{#if created}}
                                    {{>tableImages/tableImages this created=../created arr=../created}}
                                {{else}}
                                    <div class="text-center">
                                        {{#if self}}
                                            Вы еще не создали ни одного квеста
                                        {{else}}
                                            Пользователь еще не создал ни одного квеста
                                        {{/if}}
                                    </div>
                                {{/if}}
                            </div>
                        </div>

                        <div id="inProcess-title" class="col-lg-12">
                            <hr>
                            <h2 class="intro-text text-center">Завершенные</h2>
                            <hr>
                        </div>
                        <div class="quest">
                            <div class="row">
                                {{#if finished}}
                                    {{>tableImages/tableImages this arr=../finished}}
                                {{else}}
                                    <div class="text-center">
                                        {{#if self}}
                                            Вы еще не прошли ни одного квеста
                                        {{else}}
                                            Пользователь еще не прошел ни одного квеста
                                        {{/if}}
                                    </div>
                                {{/if}}
                            </div>
                        </div>

                        <div id="inProcess-title" class="col-lg-12">
                            <hr>
                            <h2 class="intro-text text-center">В процессе</h2>
                            <hr>
                        </div>
                        <div class="quest">
                            <div class="row">
                                {{#if inProcess}}
                                    {{>tableImages/tableImages this arr=../inProcess}}
                                {{else}}
                                    <div class="text-center">
                                        {{#if self}}
                                            Сейчас вы не проходите ни одного квеста
                                        {{else}}
                                            Сейчас пользователь не проходит ни одного квеста
                                        {{/if}}
                                    </div>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/content}}

    {{#content "scripts"}}
        {{#if commonData.isDev}}
            <script src="/userPage.js"></script>
        {{else}}
            <link rel="script" href="//dream-team-4.surge.sh/userPage.js">
        {{/if}}
    {{/content}}
{{/extend}}
