{{#extend "base"}}
    {{#content "title"}}
        <title>Фотоквесты</title>
    {{/content}}

    {{#content "styles"}}
        {{#if commonData.isDev}}
            <link rel="stylesheet" href="/index.css">
        {{else}}
            <link rel="stylesheet" href="//dream-team-4.surge.sh/index.css">
        {{/if}}
    {{/content}}

    {{#content "main"}}
        <div class="container">
            <div class="col-lg-12">
                <div class="row">
                    <div class="box">
                        <hr>
                        <h2 class="intro-text text-center">Список квестов</h2>
                        <hr>
                        <div id="list-of-quests">
                            {{#each quests}}
                                <div class="text-center">
                                    <div class="img-box">
                                        <img class="img-responsive img-border img-full" src={{photo}} alt="{{title}}">
                                    </div>
                                    <h2>{{title}}</h2>
                                    <a href="/quest/{{url}}" class="btn btn-default btn-lg">Посмотреть</a>
                                    <hr>
                                </div>
                            {{/each}}
                        </div>
                        <div class="more-loading-gif" style="display: none;"></div>
                    </div>
                </div>
            </div>

        </div>
    {{/content}}

    {{#content "scripts"}}
        {{#if commonData.isDev}}
            <script src="/index.js"></script>
        {{else}}
            <script src="//dream-team-4.surge.sh/index.js"></script>
        {{/if}}

    {{/content}}
{{/extend}}
